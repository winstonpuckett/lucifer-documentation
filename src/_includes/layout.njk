{% set navPages = collections.all | eleventyNavigation %}
{% macro renderNavListItem(entry) -%}
    {%- if entry.children|length -%}
        <details class="nav__section--inner" open>
            <summary>{{ entry.title_summary }}</summary>
            <ul class="nav__dropdownlist">
                <a class="nav__link{% if entry.url == page.url %} nav__link--active{% endif %}" href="{{ entry.url }}">
                    <span class="material-symbols-outlined">{{ entry.icon }}</span>
                    <span> {{ entry.title }}</span>
                </a>
                {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
            </ul>
        </details>
    {%- else -%}
        <a class="nav__link{% if entry.url == page.url %} nav__link--active{% endif %}" href="{{ entry.url }}">
            <span class="material-symbols-outlined">{{ entry.icon }}</span>
            <span> {{ entry.title }}</span>
        </a>
    {%- endif -%}        
{%- endmacro %}

