<header>
    <h1 class="title__iconwrapper"><a class="title__link" href="/">🐲 LUCIFER</h1>

    <hr class="title__separator">

    <nav>
        {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
    </nav>
</header>

